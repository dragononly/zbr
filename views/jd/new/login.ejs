    <script src="/cdn/sha1.min.js"></script>
  <script type="text/javascript">
  	$(function  () {
  		

        
        
        
       //login event    
     $('#login').on('click',function  () {
       
       if(regz()){
       	    let data={};
     	    data.phone=$('#user').val()
     	    data.password=sha1($('#password').val())
     	    data=JSON.stringify(data)
     	    let ur='/jd/login_phone?&data='+data	      
     	    ur=encodeURI(ur)
			location.href=ur
       }else{
       		let data={};
     	    data.user=$('#user').val()
     	    data.password=sha1($('#password').val())
     	    data=JSON.stringify(data)
     	     let ur='/jd/login_user?&data='+data      
			 ur=encodeURI(ur)
			 location.href=ur
     	    
       }
     
 
   	
      })//login click end！！！！    
        
        
function regz () {
		var myreg=/^[1][3,4,5,7,8][0-9]{9}$/;  
          if (!myreg.test($('#user').val())) {  
              return false;  
          } else {  
              return true;  
          }  
}     
        
        
        
        
  	})//function edn!!!
  </script>
