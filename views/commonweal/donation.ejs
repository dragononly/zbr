			    		alert('扫码后关闭窗口即可，后台会稍后同步数据')
			    	}else{
			    		
			    	}
			    },
			     error:function  (e) {
			     	alert('网络连接失败')
			     },
			
			});
			
			
			
			
			})
			
			
			
			
		})
	</script>
	
	
