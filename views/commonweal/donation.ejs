	</div>

	
	
	
	<div class="subdo">
		<a href="#" style="margin:auto;margin-top:20px;font-size:27px;border-radius: 5px;background: #4e931c;color: #fff;display: block;width: 200px;height: 50px;line-height: 50px;text-align: center;">确认捐赠</a>
	</div>
	
	<div class="erwei" style="display:none;position: absolute;left: 0;right: 0;margin: auto;top:30px;width: 200px;">
		<img src="images/commonweal/erwei.png" id="img" />
	</div>
	
	<script type="text/javascript">
		$(function  () {
			$('.subdo>a').click(function  () {
			
			var data=[]
			    data[0]=sessionStorage.user;
	            data[1]=[]
	            data[1][0]=$('.money1')[0].value+'元'
	            data[1][1]=$('.pro').val()
	            data[1][2]=$('.money1')[1].value
	            data[1][3]=$('.money1')[2].value
			$.ajax({
				type:"get",
				url:"commonweal",
				async:true,
